{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Loan Application Form",
    "type": "object",
    "properties": {
      "businessDetails": {
        "type": "object",
        "title": "Business Details",
        "properties": {
          "businessName": {
            "type": "string",
            "title": "Business Name",
            "minLength": 1
          },
          "gstin": {
            "type": "string",
            "title": "GSTIN",
            "pattern": "^\\d{2}[A-Z]{5}\\d{4}[A-Z]{1}[A-Z0-9]{1}Z[\\dA-Z]{1}$",
            "description": "Enter your GSTIN (Format: XXAAAAA000A1Z5)"
          },
          "directors": {
            "type": "array",
            "title": "Directors",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "title": "Director Name",
                  "minLength": 1
                },
                "panNumber": {
                  "type": "string",
                  "title": "PAN Number",
                  "pattern": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
                  "description": "Enter the PAN Number of the director (Format: ABCDE1234F)"
                },
                "tags": {
                  "type": "array",
                  "title": "Tags",
                  "items": {
                    "type": "string",
                    "enum": ["Director", "Authorized Signatory"]
                  },
                  "uniqueItems": true
                }
              },
              "required": ["name", "panNumber", "tags"]
            },
            "minItems": 1
          }
        },
        "required": ["businessName", "gstin", "directors"]
      },
      "loanDetails": {
        "type": "object",
        "title": "Loan Details",
        "properties": {
          "creditScore": {
            "type": "number",
            "title": "Credit Score",
            "minimum": 300,
            "maximum": 850
          },
          "loanAmount": {
            "type": "number",
            "title": "Required Loan Amount",
            "minimum": 50000,
            "maximum": 500000
          },
          "guarantors": {
            "type": "array",
            "title": "Guarantors",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "title": "Guarantor Name",
                  "minLength": 1
                },
                "panNumber": {
                  "type": "string",
                  "title": "PAN Number",
                  "pattern": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
                  "description": "Enter the PAN Number of the director (Format: ABCDE1234F)"
                },
                "relationship": {
                  "type": "string",
                  "title": "Relationship",
                  "enum": ["Father", "Mother", "Brother", "Sister", "Spouse", "Other"]
                },
                "relationOther": {
                  "type": "string",
                  "title": "Specify Relationship"
                }
              },
              "required": ["name", "panNumber", "relationship"],
              "dependencies": {
                "relationship": {
                  "oneOf": [
                    {
                      "properties": {
                        "relationship": { "const": "Other" }
                      },
                      "required": ["relationOther"]
                    },
                    {
                      "properties": {
                        "relationship": { "enum": ["Father", "Mother", "Brother", "Sister", "Spouse"] }
                      }
                    }
                  ]
                }
              }
            },
            "minItems": 2
          },
          "bankStatements": {
            "type": "array",
            "title": "Bank Statements",
            "items": {
              "type": "string",
              "format": "data-url"
            },
            "minItems": 1
          }
        },
        "required": ["creditScore", "loanAmount"],
        "if": {
          "properties": { "creditScore": { "maximum": 699 } }
        },
        "then": {
          "required": ["guarantors", "bankStatements"]
        }
      }
    },
    "required": ["businessDetails", "loanDetails"]
  }