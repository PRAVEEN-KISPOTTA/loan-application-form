{
    "title": "Loan Application Form",
    "type": "object",
    "properties": {
      "businessDetails": {
        "type": "object",
        "title": "Business Details",
        "properties": {
          "businessName": {
            "type": "string",
            "title": "Business Name",
            "minLength": 1,
            "description": "Enter your business name"
          },
          "gstin": {
            "type": "string",
            "title": "GSTIN",
            "pattern": "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}[Z]{1}[0-9A-Z]{1}$",
            "description": "Enter your GSTIN (Format: XXAAAAA000A1Z5)"
          },
          "directors": {
            "type": "array",
            "title": "Directors",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "title": "Director Name",
                  "minLength": 1
                },
                "panNumber": {
                  "type": "string",
                  "title": "PAN Number",
                  "pattern": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
                  "description": "Enter the PAN Number of the director (Format: ABCDE1234F)"
                },
                "tags": {
                  "type": "array",
                  "title": "Tags",
                  "items": {
                    "type": "string",
                    "enum": [
                      "Director",
                      "Authorized Signatory"
                    ]
                  },
                  "description": "Tags related to the director"
                }
              },
              "required": ["name", "panNumber"]
            },
            "minItems": 1,
            "description": "List of directors associated with the business"
          }
        },
        "required": ["businessName", "gstin", "directors"]
      },
      "loanDetails": {
    "type": "object",
    "title": "Loan Details",
    "properties": {
      "creditScore": {
        "type": "number",
        "title": "Credit Score",
        "minimum": 0,
        "maximum": 850,
        "description": "Enter your credit score (0 - 850)"
      },
      "loanAmount": {
        "type": "number",
        "title": "Required Loan Amount",
        "minimum": 50000,
        "maximum": 500000,
        "exclusiveMinimum": 50000,  
        "exclusiveMaximum": 500000,  
        "description": "Select the loan amount you wish to apply for"
      },
      "guarantors": {
        "type": "array",
        "title": "Guarantors",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "title": "Guarantor Name",
              "minLength": 1
            },
            "panNumber": {
              "type": "string",
              "title": "PAN Number",
              "pattern": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
              "description": "Enter the PAN number of the guarantor"
            },
            "relationship": {
              "type": "string",
              "title": "Relationship with Applicant",
              "enum": [
                "Father",
                "Mother",
                "Brother",
                "Sister",
                "Spouse",
                "Other"
              ],
              "description": "Select the relationship with the applicant"
            },
            "relationOther": {
              "type": "string",
              "title": "Specify Other Relationship",
              "description": "Please specify if 'Other' is selected for relationship"
            }
          },
          "required": ["name", "panNumber", "relationship"]
        },
        "minItems": 2,  
        "description": "List of guarantors for your loan (required if Credit Score < 700)"
      },
      "bankStatements": {
        "type": "array",
        "title": "Bank Statement (Files Upload)",
        "items": {
          "type": "string",  
          "description": "Upload your bank statements as files (multiple files allowed)"
        },
        "minItems": 1,
        "description": "Upload your bank statements (required if Credit Score < 700)"
      }
    },
    "required": ["creditScore", "loanAmount"],
    "dependencies": {
      "creditScore": {
        "oneOf": [
          {
            "properties": {
              "creditScore": {
                "maximum": 699
              },
              "guarantors": {
                "minItems": 2
              },
              "bankStatements": {
                "minItems": 1
              }
            },
            "required": ["guarantors", "bankStatements"]
          }
        ]
      }
    }
  }
    },
    "required": ["businessDetails", "loanDetails"]
  }
  